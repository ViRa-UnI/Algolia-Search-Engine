<odoo>
    <data>
        <record id="view_algolia_config_wizard_form" model="ir.ui.view">
            <field name="name">algolia.config.wizard.form</field>
            <field name="model">algolia.config.wizard</field>
            <field name="arch" type="xml">
                <form string="Algolia Configuration">
                    <sheet>
                        <group>
                            <field name="algolia_app_id" string="Algolia Application ID"/>
                            <field name="algolia_api_key" string="Algolia API Key"/>
                            <field name="algolia_index_name" string="Algolia Index Name"/>
                        </group>
                        <footer>
                            <button string="Save" type="object" name="action_save_config" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_algolia_config_wizard" model="ir.actions.act_window">
            <field name="name">Algolia Configuration Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">algolia.config.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_algolia_config_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_algolia_config_wizard"
                  name="Algolia Configuration"
                  action="action_algolia_config_wizard"
                  parent="base.menu_custom"
                  sequence="10"/>
    </data>
</odoo>