<odoo>
    <data noupdate="1">
        <!-- Algolia Integration Configuration Parameters -->
        <record id="algolia_integration_config_parameters" model="ir.config_parameter">
            <field name="key">algolia_integration.api_key</field>
            <field name="value">your-algolia-api-key</field>
        </record>
        <record id="algolia_integration_config_parameters" model="ir.config_parameter">
            <field name="key">algolia_integration.app_id</field>
            <field name="value">your-algolia-app-id</field>
        </record>
        <record id="algolia_integration_config_parameters" model="ir.config_parameter">
            <field name="key">algolia_integration.index_name</field>
            <field name="value">your-algolia-index-name</field>
        </record>

        <!-- Access Rights for Product Index Model -->
        <record id="access_product_index_model_user" model="ir.model.access">
            <field name="name">product.index.access.user</field>
            <field name="model_id" ref="model_product_index"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Rights for Search Analytics Model -->
        <record id="access_search_analytics_model_user" model="ir.model.access">
            <field name="name">search.analytics.access.user</field>
            <field name="model_id" ref="model_search_analytics"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>